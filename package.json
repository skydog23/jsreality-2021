{
  "name": "jsreality",
  "version": "0.1.0",
  "description": "JavaScript port of jReality's core mathematical libraries",
  "type": "module",
  "main": "src/core/index.js",
  "files": [
    "src/core/**/*.js",
    "!src/core/**/__tests__/**",
    "!src/core/**/*.test.js"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "keywords": [
    "geometry",
    "mathematics",
    "projective-geometry",
    "linear-algebra"
  ],
  "author": "",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "mathjs": "^15.1.0"
  }
}
